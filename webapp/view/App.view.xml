<mvc:View controllerName="helloworld.controller.App"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <App id= "app">
    <Page id="page" title="{i18n>title}">
        <content>
        	<Button text="Hello"
						press="onPress">
				</Button>
                 <Input
                    value="{/name}"
                    description="Hello {/name}"
                    valueLiveUpdate="true"
                    width="60%"/>
        </content>
    </Page>
    </App>
</mvc:View>
